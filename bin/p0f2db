import ivre.db
import ivre.utils
import ivre.passive

import subprocess
import os
import signal


def terminate(signum, stack_frame):
    p0fprocess.terminate()

signal.signal(signal.SIGINT, terminate)
signal.signal(signal.SIGTERM, terminate)


def process_file(sensor, fname, mode='SYN'):
    global p0fprocess
    if fname.lower().startswith('iface:'):
        fname = ['-i', fname[6:]]
    else:
        fname = ['-s', fname]
    mode = ivre.passive.P0F_MODES[mode]
    recontype = 'P0F2-%s' % mode['name']
    p0fprocess = subprocess.Popen(
        ['p0f', '-l', '-S', '-ttt'] + fname
        + mode['options'] + [mode['filter']],
        stdout=subprocess.PIPE,
        preexec_fn=os.setpgrp,
    )
    ivre.db.db.passive.insert_or_update_bulk(
        ivre.passive.parse_p0f_line(
            line,
            include_port=(mode['name'] == 'SYN+ACK'),
            sensor=sensor,
            recontype=recontype,
        ) for line in p0fprocess.stdout
    )

if __name__ == '__main__':
    import sys
    if len(sys.argv) == 4:
        process_file(sys.argv[1], sys.argv[2], mode=sys.argv[3])
    else:
        process_file(sys.argv[1], sys.argv[2])
